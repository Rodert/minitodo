.stats-period {
  display: flex;
  justify-content: space-around;
  background-color: white;
  border-radius: 15px;
  margin: 20px 0;
  padding: 15px;
}

.period-btn {
  padding: 8px 15px;
  border-radius: 12px;
  font-size: 28rpx;
  font-weight: 600;
  color: #6e6e73;
}

.period-btn.active {
  background-color: #f5f5f7;
  color: #1d1d1f;
}

.stats-chart {
  background-color: white;
  border-radius: 15px;
  margin: 20px 0;
  padding: 20px;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 15px;
}

.chart-container {
  height: 200px;
  display: flex;
  align-items: flex-end;
  gap: 15px;
  padding-bottom: 20px;
  position: relative;
}

.chart-container::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #e5e5e5;
}

.chart-bar {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
}

.bar {
  width: 100%;
  background-color: #ff6347;
  border-radius: 5px 5px 0 0;
}

.bar-label {
  font-size: 24rpx;
  color: #6e6e73;
}

.stats-summary {
  background-color: white;
  border-radius: 15px;
  margin: 20px 0;
  padding: 20px;
}

.summary-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 15px;
}

.summary-items {
  display: flex;
  justify-content: space-between;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.summary-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff6347;
}

.summary-label {
  font-size: 24rpx;
  color: #6e6e73;
  margin-top: 5px;
}

.container {
  padding-bottom: 60px; /* 为自定义导航栏留出空间 */
} 